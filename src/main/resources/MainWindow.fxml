<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="mainPane" alignment="center" hgap="10" styleClass="root" vgap="10"
          xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="subtitle.controller.Controller">
    <padding>
        <Insets bottom="10" left="25" right="25" top="25"/>
    </padding>
    <Text id="welcome-text" text="Welcome" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0"/>

    <Label text="FileName:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="originalFileName" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"/>

    <Label text="NewFileName:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField fx:id="newFileName" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2"/>

    <Label text="Offset(MS):" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField fx:id="offset" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3"/>

    <Label text="SourceEncoding:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <ComboBox fx:id="srcEncSelector" prefWidth="200.0"/>
    </HBox>

    <Label text="TargetEncoding:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <ComboBox fx:id="targetEncSelector" prefWidth="200.0"/>
    </HBox>

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="6">
        <Button fx:id="apply" text="Apply"/>
    </HBox>

    <Text fx:id="actiontarget" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

    <stylesheets>
        <URL value="@MainWindow.css"/>
    </stylesheets>
</GridPane>
